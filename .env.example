# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
# Options: staging | main
SERVER_ENV=staging
COMPOSE_PROJECT_NAME=todo_agent_staging

# ============================================
# DJANGO SETTINGS
# ============================================
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,staging.yourdomain.com

# ============================================
# DATABASE SETTINGS
# ============================================
# Engine: django.db.backends.postgresql | django.db.backends.sqlite3
DB_ENGINE=django.db.backends.postgresql
DB_NAME=todo_agent_staging
DB_USER=postgres
DB_PASSWORD=your-db-password-here
DB_HOST=db
DB_PORT=5432

# ============================================
# REDIS SETTINGS
# ============================================
REDIS_URL=redis://redis:6379/1

# ============================================
# WEB SERVER SETTINGS
# ============================================
WEB_PORT=8000

# ============================================
# MICROSOFT OAUTH SETTINGS
# ============================================
TENANT_ID=consumers
# ENCRYPTION_SALT should be a random string for encrypting tokens
ENCRYPTION_SALT=your-random-salt-here-change-in-production
